bodybg = #c9d4d8
commentbg = #8eaba6
headingbg = #555c3b
postcolor = #8c5e47
topbarbg = #3c3640

body
    margin: 0px;
    padding: 0px;
    background bodybg

h1, h2, h3, h4, h5
    color topbarbg
    
.loginBox
    margin-top 40px
    text-align center
    color darken(postcolor, 50)
    label
        display inline-block
        width 150px
        margin-right 20px
    input
        width 150px
    center(400px)
    line-height 25px
    padding 20px
    border-radius 5px
    background white
    box-shadow 5px 5px 5px grey
    
.title
    float left
    color commentbg
    padding 0
    margin 0
    margin-left 20px
    font-style italic
    h1
        padding 0
        margin 0
        border-radius 5px     

.aPost, .newPost
    width: 100%;
    padding 0px
    group()
    margin-bottom 20px
    background white
    border-radius 5px
    box-shadow 2px 2px 2px grey

input[type="text"]
    background white
    &:hover
        background #EEEEEE
.newPost
    margin-top 40px
    padding 20px
    h2, h1, h3
        padding 0
        margin 0
    input[type="text"]
        width 80%
    input[type="submit"]
        float right
.master
    center(70%)

.postHeader
    width 100%
    height 25px
    background headingbg
    text-transform capitalize
    border-top-left-radius 5px
    border-top-right-radius 5px
    box-shadow 1px 1px 1px grey 
    h3
        padding 0
        margin 0
        margin-left 10px
        color white
.mainPost
    group()
    margin 15px 0
.postTime
    color lightgrey
    height 20px
    float right
    position relative
    top -20px
    margin-right 20px 
    
.postContent
    margin-left 20px
    color topbarbg
.newPost input[text-emphasis ="text"]
    width: 70%;

    
.addComment input[type="text"]
    width:70%;

.topbar
    background: topbarbg;
    height:50px;
    width:100%;
    box-shadow 5px 5px 5px grey
    input, p
        float:right;
        color:white;
        margin:10px
    input
        button(headingbg, "small")
    
.aComment, .addComment
    background commentbg
    color white
    padding 10px 20px
    border-bottom 1px solid grey
    
    group()
    .commentTime
        col(2/7, cycle:3)
        color lightgrey
        fs(60%)
    .commentContent
        col(4/7, cycle:3)
        fs(90%)
    .commentAuthor
        col(1/7, cycle:3)
        fs(90%)
        color darkblue
    &:hover
        background darken(commentbg, 10)
        

.addComment 
    height 40px
    input[type="submit"]
        float right
        col(1/4, cycle:2)
        text-align center
    input[type="text"]
        col(3/4, cycle:2)
    
.commentBox
    box-shadow 2px 2px 2px grey
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px 
    margin 20px 
